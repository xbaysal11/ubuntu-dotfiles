{
  // onSave
  // "editor.formatOnSave": true,
  "eslint.autoFixOnSave": true,
  "eslint.alwaysShowStatus": true,
  // "files.autoSave": "onFocusChange",
  //f
  "editor.fontFamily": "'Fira Code', 'Droid Sans Mono', 'monospace' , 'Droid Sans Fallback'",
  "editor.fontLigatures": true,
  //fonts
  "editor.fontSize": 13,
  "terminal.integrated.fontSize": 13,
  //visibility
  "window.menuBarVisibility": "toggle",
  "editor.minimap.enabled": false,
  "window.zoomLevel": -1,
  //theme
  "editor.tokenColorCustomizations": {
    "comments": "#8f8f8f",
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "jumpRightBrackets.rightBrackets": ")}",
  "editor.snippetSuggestions": "top",
  "workbench.startupEditor": "newUntitledFile",
  "editor.renderIndentGuides": false,
  "git.ignoreMissingGitWarning": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "liveServer.settings.donotShowInfoMsg": true,
  "breadcrumbs.enabled": true,
  "workbench.editor.tabSizing": "shrink",
  "window.title": "VSCode",
  "git.autofetch": true,
  "workbench.iconTheme": "material-icon-theme",
  "explorer.confirmDelete": false,
  "materialTheme.accent": "Pink",
  "workbench.colorCustomizations": {
    "activityBarBadge.background": "#FF4081",
    "list.activeSelectionForeground": "#FF4081",
    "list.inactiveSelectionForeground": "#FF4081",
    "list.highlightForeground": "#FF4081",
    "scrollbarSlider.activeBackground": "#FF408150",
    "editorSuggestWidget.highlightForeground": "#FF4081",
    "textLink.foreground": "#FF4081",
    "progressBar.background": "#FF4081",
    "pickerGroup.foreground": "#FF4081",
    "tab.activeBorder": "#FF4081",
    "notificationLink.foreground": "#FF4081",
    "editorWidget.resizeBorder": "#FF4081",
    "editorWidget.border": "#FF4081",
    "settings.modifiedItemIndicator": "#FF4081",
    "settings.headerForeground": "#FF4081",
    "panelTitle.activeBorder": "#FF4081",
    "breadcrumb.activeSelectionForeground": "#FF4081",
    "menu.selectionForeground": "#FF4081",
    "menubar.selectionForeground": "#FF4081"
  },
  "material-icon-theme.folders.color": "#ef5350",
  "highlightLine.borderColor": "#FF4081",
  "highlightLine.borderWidth": "1px",
  "highlightLine.borderStyle": "solid",
  "nunjucksFormat.textpreserve": false,
  "editor.renderLineHighlight": "gutter",
  "colorize.ignore_search_variables_info": true,
  "explorer.confirmDragAndDrop": false,
  "eslint.packageManager": "yarn",
  //brackets
  "bracketPairColorizer.showBracketsInGutter": true,
  "bracketPairColorizer.showHorizontalScopeLine": false,
  "guides.active.width": 3,
  "files.associations": {
    "*.html": "html"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "liveshare.featureSet": "insiders",
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  //SASS compiler
  "liveSassCompile.settings.formats": [
    {
      "format": "compressed",
      "extensionName": ".min.css",
      "savePath": null
    }
  ],
  "liveSassCompile.settings.generateMap": false,
  // "editor.cursorStyle": "block",
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "go.useLanguageServer": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 4,
  "trailingComma": "none",
  "editor.hover.enabled": false,
  "workbench.activityBar.visible": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "workbench.colorTheme": "Community Material Theme Palenight High Contrast",
  "diffEditor.ignoreTrimWhitespace": false,

  //bem
  "ecsstractor_port.brackets_newline_after": false,
	"ecsstractor_port.modifier_separator": "_",
	"ecsstractor_port.destination": "clipboard",
  "ecsstractor_port.comment_style": "scss",
  "ecsstractor_port.add_comment": false,
  "ecsstractor_port.bem_nesting": true,
  "ecsstractor_port.empty_line_before_nested_selector": false,
}